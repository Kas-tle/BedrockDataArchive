{
    "compilerOptions": {
        "target": "ES2023",
        "module": "commonjs",
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/**/*",
        "*.ts",
        "config.json"
    ]
}